    <title>Truthy Weather</title>
    
    <script id="averageCard" type="text/x-handlebars-template">
      <div class="average">
        <h1>{{city_name}}</h1>
        <ul>
          <li class="tempA">Temperature: <span>{{temp}}</span> F</li>
          <li class="humidA">Humidity: <span>{{humidity}}</span>%</li>
          <li class="windSpeedA">Wind speed: <span>{{wind_speed}}</span> m/s</li>
        </ul>
        <div class="body">
          {{body}}
        </div>
      </div>
    </script>

    <script id="entry-template" type="text/x-handlebars-template">
      <div class="entry">
        <h1>{{city_name}}</h1>
        <ul>
          <li class="temp">Temperature: {{temperature}} F</li>
          <li class="humid">Humidity: {{humidity}}%</li>
          <li class="windSpeed">Wind speed: {{wind_speed}} m/s</li>
          <li>Wind direction: {{wind_direction}} deg from north</li>
          <li>{{description}}</li>
          <li>Source: {{api_name}}</li>
        </ul>
        <div class="body">
          {{body}}
        </div>
      </div>
    </script>


</head>
